{
    "composer": {
        "require": {
            "emojione/emojione": "3.1.2"
        }
    },
    "plugins": [
        "https://downloads.wordpress.org/plugin/dark-mode.1.2.zip"
    ],
    "pages": [
        {
            "title": "home",
            "template": "home.html"
        }
    ],
    "post_types": [
        {
            "name": "book",
            "name_multiple": "books",
            "public": true,
            "has_archive": true
        },
        {
            "name": "shelf",
            "name_multiple": "shelfs",
            "public": true,
            "has_archive": true
        }
    ],
    "metaboxes": [
        {
            "title": "Settings",
            "where": "book",
            "fields": [
                {
                    "key": "name",
                    "display_name": "Name",
                    "type": "text"
                },
                {
                    "key": "featured",
                    "display_name": "Featured",
                    "type": "checkbox"
                }
            ]
        }
    ]
}
